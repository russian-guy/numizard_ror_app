<% provide(:title, 'Регистрация') %>
<h1>Регистрация</h1>

<div class="hero-unit">
  <div class="row-fluid">
    <div class="span6 offset3">
      <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Логин" %>
        <%= f.text_field :name %>

        <%= f.label :email, "E-mail адрес" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Пароль (подтверждение)" %>
        <%= f.password_field :password_confirmation %>


        <div class="center">
          <%= f.submit "Зарегестрироваться", class: "btn btn-large btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
